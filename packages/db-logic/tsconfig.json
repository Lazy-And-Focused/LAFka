{
    "compilerOptions": {
        "target": "ES2024",
        "module": "CommonJS",
        "outDir": "./dist",
        "removeComments": true,
        "declaration": true,
        "strict": true,
        "strictNullChecks": true,
        "skipLibCheck": true, 
        "baseUrl": "./",
        "paths": {
            "database/*": ["src/database/*"],
            "classes/*": ["src/classes/*"],
            "lafka/types/*": [
                "src/types/*",
                "node_modules/@lafka/types/dist/*"
            ],
            "lafka/redis/*": [
                "node_modules/@lafka/db-redis/dist/*"
            ]
        }
    },
    "exclude": [ "node_modules", "dist" ]
}